<h4 class="text-3xl font-normal leading-normal mt-0 mb-2 text-zinc-800 pb-5">Edit image</h4>

<% if session[:user_id] == @gallery_id %>
  <%= render "form", image: @image %>
<% else %> 
  <h5 class="text-2xl font-normal leading-normal mt-0 mb-2 text-stone-800"> You cannot edit this image </h5>
<% end %>

<br>

<div style="padding-top:10px;">
  <%= link_to "← Back to Image", @image, class: "hover:text-purple-900 underline" %>
</div>
