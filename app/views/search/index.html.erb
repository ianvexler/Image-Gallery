<h3 class="pt-3 text-4xl font-normal leading-normal mt-0 mb-2 text-stone-800">Results</h3>
<%= render 'search/form' %>

<dl class="pt-5 max-w-md text-gray-900 divide-y divide-gray-200 dark:text-slate-800 dark:divide-gray-700">
    <% if @galleries.length > 0 %>
      <% @galleries.each do |gallery| %>
        <div class="flex flex-col pb-3">
            <%= render gallery%>
        </div>
      <% end %>
    <% else %>
      <h5 class="text-2xl font-normal leading-normal mt-0 mb-2 text-stone-800"> No galleries where found </h5>
    <% end %>
</dl>

