<h1>All Galleries</h1>

<div id="galleries">
  <% @galleries.each do |gallery| %>
    <%= render gallery %>
    <p>
      <%= link_to "Show this gallery", gallery_path(gallery.id, view_name: "all_galleries") %>
    </p>
  <% end %>
</div>

