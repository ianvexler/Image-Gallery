<p style="color: green"><%= notice %></p>

<%= render @gallery %>

<div>
  <% if @gallery.user_id == session[:user_id]%>
    <%= link_to "Edit this gallery", edit_gallery_path(@gallery) %> |
    <%= link_to "Add Images", new_image_path(gallery_id: @gallery.id) %> 
  <% end %>

  <div id="images">
    <% @images = get_images_by_user_id(@gallery.id) %>
    <% @images.each do |image| %>
      <%= render image %>
      <p>
        <% if @gallery.user_id == session[:user_id]%>
          <%= link_to "Edit this image", image %>
        <% end %>
      </p>
    <% end %>
  </div>

  <% if params[:view_name] == "all_galleries" %>
    <%= link_to "Back to galleries", galleries_path(view_name: "all_galleries") %>
  <% else %>
    <%= link_to "Back to galleries", galleries_path(view_name: "my_galleries") %>
  <% end %>
</div>
