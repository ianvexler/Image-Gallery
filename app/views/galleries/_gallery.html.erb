<div id="<%= dom_id gallery %>">
  <h4 class="text-3xl font-normal leading-normal mt-0 mb-2 text-zinc-800">
    <%= link_to gallery.title, gallery_path(gallery.id, view_name: "all_galleries"), class:"text-black hover:text-stone-300" %>
  </h4>

  <ul class="space-y-1 max-w-md list-none list-inside text-slate-800 dark:text-slate-800">
    <li>
        <h6 class="text-xl font-normal leading-normal mt-0 mb-2 text-stone-800">
          By:
          <% @user = get_user_by_id(gallery.user_id) %>
          <%= @user.email %>
        </h6>
    </li>
  </ul>
</div>
