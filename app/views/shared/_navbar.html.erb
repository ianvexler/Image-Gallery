<nav>
    <ul>
        <li><%= link_to "Home", root_path, class: "nav_link" %></li>
        <li><%= link_to "Galleries", galleries_path, class: "nav_link" %></li>
        
        <% if session[:logged_in].nil? || !session[:logged_in] %>
            <li><%= link_to "Login", login_path, class: "nav_fake_button", id: "login_button" %></li>
            <li><%= link_to "Free Sign Up", sign_up_path, class: "nav_fake_button", id: "sign_up_button" %></li>
        <% end %>
        <% if session[:logged_in] %>
            <li id="logout_li">
                <%= form_with model: @user, url: logout_path do |form| %>
                    <li><%= link_to "My Galleries", galleries_path, class: "nav_link" %></li>
                    <%= form.submit "Logout", class: "nav_button", id: "logout" %>
                <% end %>
            </li>
        <% end %>
    </ul>
</nav>

